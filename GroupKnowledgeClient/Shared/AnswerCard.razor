<MudCard Elevation="1">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudIcon Icon="@Icons.Material.TwoTone.QuestionAnswer" Color="Color.Secondary" Size="Size.Small" Square="true"/>
        </CardHeaderAvatar>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body1">@Content</MudText>
    </MudCardContent>
    <MudCardActions Style="justify-content:right">
        <MudTooltip Text="See Answers" Color="Color.Secondary">
            <MudIconButton Icon="@Icons.Material.TwoTone.QuestionAnswer" Color="Color.Primary"/>
        </MudTooltip>
    </MudCardActions>
</MudCard>

@code {

    [Parameter] 
    public string? Content { get; set; }

}