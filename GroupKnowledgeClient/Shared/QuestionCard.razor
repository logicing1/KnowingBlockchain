<MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar><MudIcon Icon="@Icons.Material.TwoTone.QuestionAnswer"></MudIcon></MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body2">Why did the chicken cross the road?</MudText>
        </CardHeaderContent>
    </MudCardHeader>
</MudCard>

@code {
    [Parameter] public string Class { get; set; }
    [Parameter] public string Style { get; set; }
}