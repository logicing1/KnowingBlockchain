@page "/disconnect"
@layout MainLayout

@inject IGroupState groupState;

<MudContainer Class="d-flex justify-center align-center">
    <MudPaper Elevation="5" Class="pa-5" style="text-align:center">
        <MudContainer Class="d-flex flex-column justify-center" style="width: 450px">
            <img src="/icon-512.png" alt="Group exchanging questions and answers online">
            <MudSelect T="Group" Label="Group Name" Placeholder="Select Group to Disconnect" Variant="Variant.Outlined"  OffsetY="true" @bind-Value="SelectedGroup">
                @foreach (var group in groupState.Connected.Values)
                {
                    <MudSelectItem Value=@group>@group.Name</MudSelectItem>
                }
            </MudSelect>
            <MudFab Icon="@Icons.Material.TwoTone.GroupRemove" Label="Disconnect" Size="Size.Medium" Class="align-self-center mt-6" Color="Color.Warning" @onclick="Disconnect" />
        </MudContainer>
    </MudPaper>
</MudContainer>

@code {
    private Group SelectedGroup { get; set; } = Group.Empty;

    private void Disconnect()
    {
        if (SelectedGroup == Group.Empty) return;
        groupState.Disconnect(SelectedGroup);
        SelectedGroup = Group.Empty;
        StateHasChanged();
    }

}
