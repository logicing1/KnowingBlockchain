@page "/disconnect"
@layout MainLayout

@inject IGroupState groupState;

<MudContainer Class="d-flex justify-center align-center">
    <MudPaper Elevation="5" Class="pa-5" style="text-align:center">
        <MudContainer Class="d-flex flex-column justify-center" style="width: 450px">
            <img src="/icon-512.png">
            <MudSelect T=Group Label="Group Name" Placeholder="Select Group to Disconnect" Variant="Variant.Outlined"  OffsetY="true" @bind-Value="group">
                @foreach (var group in groupState.List)
                {
                    <MudSelectItem Value=@group>@group.Name</MudSelectItem>
                }
            </MudSelect>
            <MudFab Icon="@Icons.Material.Filled.GroupRemove" Label="Disconnect" Size="Size.Large" Class="align-self-center mt-6" Color="Color.Warning" @onclick="Disconnect" />
            <MudIconButton Icon="@Icons.Material.TwoTone.HelpOutline" Size="Size.Small" Class="mt-10 align-self-end" Color="Color.Info" />
        </MudContainer>
    </MudPaper>
</MudContainer>

@code {
    private Group? group = default;

    private void Disconnect()
    {
        if (group == default) return;
        groupState.Disconnect(group);
        group = default;
        StateHasChanged();
    }

}
