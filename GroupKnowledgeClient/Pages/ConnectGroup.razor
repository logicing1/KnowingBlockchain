@page "/"
@page "/connect"
@layout MainLayout

@inject NavigationManager navigation;
@inject IGroupState groupState;

<MudContainer Class="d-flex justify-center align-center">
    <MudPaper Elevation="5" Class="pa-5" style="text-align:center">
        <MudContainer Class="d-flex flex-column justify-center" style="width: 450px">
            <img src="/icon-512.png">
            <MudTextField Label="Group Contract Address" @bind-Value="contractAddress" Variant="Variant.Outlined"></MudTextField>
            <MudFab Icon="@Icons.Material.TwoTone.GroupAdd" Label="Connect" Size="Size.Large" Class="align-self-center mt-6" Color="Color.Primary" @onclick="Connect" />
            <MudIconButton Icon="@Icons.Material.Outlined.Info" Size="Size.Small" Class="mt-10 align-self-end" Color="Color.Info" />
        </MudContainer>
    </MudPaper>
</MudContainer>

@code {
    private string contractAddress = string.Empty;

    private void Connect()
    {
        var group = groupState.Connect(contractAddress);
        groupState.Selected = default;
        if(group != default) navigation.NavigateTo($"questions/{group.Contract}");
    }

}
